<script>

    $(document).ready(function () {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy"
        });

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = dd + '-' + mm + '-' + yyyy;

        $(".datepicker").val(today);
    })

    function ChangeColor(value) {

        if ($(value).val() != '')
            $(value).css("border-color", "#e1e1e1");
    }

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    ClickAccount = function (TransactionCode, TransactionDate, CusCode, CusDesc,InvType, Reference, EmpDesc, ProdDes, EngineNo, ChasisNo, Credit) {

        document.getElementById('txtTransaction').value = TransactionCode;
        document.getElementById('txtReference').value = Reference;
        document.getElementById('txtSalePerson').value = EmpDesc;
        document.getElementById('txtEngine').value = EngineNo;
        document.getElementById('txtChassis').value = ChasisNo;
        document.getElementById('txtCustomerCode').value = CusCode;
        document.getElementById('txtCustomer').value = CusDesc;
        document.getElementById('txtModel').value = ProdDes;
        document.getElementById('txtCredit').value = Credit;
        document.getElementById('txtInvType').value = InvType;
        $("#POModalActCode").modal("hide");
    }

    $("#btnSave").click(function () {

        var count = 0;

        var transaction = $("#txtTransaction").val();
        var debit = $("#txtDebit").val();
        var credit = $("#txtCredit").val();
        var reversaldate = $("#txtReversalDate").val();

        if (transaction == "" || transaction == null) {
            $("#txtTransaction").css("border-color", "red");
            count++;
        }
        if (debit == "" || debit == null) {
            $("#txtDebit").css("border-color", "red");
            count++;
        }
        if (reversaldate == "" || reversaldate == null) {
            $("#txtReversalDate").css("border-color", "red");
            count++;
        }

        debugger



        if (count == 0) {
            if (Math.round(credit) != debit) {
                $("#lblMessage").html("Debit and Credit Amount Should be equal");
                $("#section-message").modal("show");
                $("#txtDebit").focus();
            } else {
                $("#section-confirm").modal("show");
            }

        } else {
            $("#lblMessage").html("Please fill the Required feilds");
            $("#section-message").modal("show");
        }

    })

    function SaveEnquiry() {

        var dto = {};
        debugger
        dto.DealerCode = "@Session["DealerCode"].ToString()";
        dto.ReversalID = $("#txtReversalNo").val();
        dto.ReversalDate = $("#txtReversalDate").val();
        dto.TransactionNo = $("#txtTransaction").val();
        dto.TrType = 'R';
        dto.TransactionAmount = $("#txtDebit").val();
        dto.Remarks = $("#txtRemarks").val();

        $.ajax({
            dataType: "json",
            async: true,
            type: 'GET',
            url: '@Url.Content("~/Reversal/Insert_Reversal")',
            data: dto,
            success: function (data) {
                debugger
                if (data) {
                    if (data.Success == true) {
                        saveAccTrans();
                    }
                    else {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                }
            },
            complete: function () {

            },
            error: function (data) {
                $("#section-confirm").modal("hide")
                $("#modalMessage").css("background-color", "#e46457");
                $("#lblMessage").text(data.Message)
                $("#section-message").modal('show');
            }
        });
    }
    
        function saveAccTrans() {

            var dto = {};

            dto.DealerCode = "@Session["DealerCode"].ToString()";
            dto.TransactionDate = $("#txtReversalDate").val();
            dto.CusCode = $("#txtCustomerCode").val();
            dto.InvType = $('#txtInvType').val();
            dto.TrType = 'R';
            dto.Debit = $('#txtDebit').val();
            dto.Narration = "This is the reverse entry of " + $("#txtReference").val();
            dto.Reference = $("#txtReference").val();

        $.ajax({
            dataType: "json",
            async: true,
            type: 'POST',
            url: '@Url.Content("~/Reversal/Insert_ReversalAccountTrans")',
            data: dto,
            success: function (data) {

                if (data) {
                    if (data.Success == true) {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                        setTimeout(function () {
                            $('#section-message').modal('hide')
                        }, 4000);
                    }
                }
                else {
                    $("#section-confirm").modal("hide")
                    $("#modalMessage").css("background-color", "#e46457");
                    $("#lblMessage").text(data.Message)
                    $("#section-message").modal('show');

                }
            },
            complete: function () {

                location.reload();
            },
            error: function (data) {
                $("#section-confirm").modal("hide")
                $("#modalMessage").css("background-color", "#e46457");
                $("#lblMessage").text(data.Message)
                $("#section-message").modal('show');
            }

        });

    }

</script>
