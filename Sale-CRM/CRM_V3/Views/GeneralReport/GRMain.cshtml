<script>

    $(document).ready(function () {

        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            yearRange: "-3:+1",
            changeYear: true,
            changeMonth: true,
        });

        $(function () {
            $(".datepicker").datepicker({
                changeYear: true,
                changeMonth: true,
                yearRange: "-30:+1",
                dateFormat: "dd-mm-yy"
            });
        });
        
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        //today = mm + '/' + dd + '/' + yyyy;
        today = dd + '-' + mm + '-' + yyyy;

        $("#txtFromDate").val(today);
        $("#txtToDate").val(today);

    })


    $("#btnPrint").click(function () {

        var leadId = "@leadId";

        debugger 
        var baseurl = '@Url.Action("Export")';
        var url = baseurl + '?EnquiryId=' + leadId + '&Type=' + $('#ddlStkType').val() + '&FromDate=' + $("#txtFromDate").val() + '&ToDate=' + $("#txtToDate").val() + '';

        window.open(url, '_blank');

    })

</script>


