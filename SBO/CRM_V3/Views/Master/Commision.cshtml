
@{
    ViewBag.Title = "Commision";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}

<style>
    .makespace {
        margin-bottom: 20px;
    }

    .icheckbox_minimal-blue {
        top: 10px;
    }
</style>




<section class="wrapper main-wrapper row" style=''>

    <div class="clearfix"></div>

    @* Main Body Starts *@
    <form method="post">


        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Commision Master</h2>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12">
                                <div class="col-md-4">
                                    <label class="form-label">Commision Code</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" id="txtCommCode" readonly>
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Commision Date</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" class="form-control datepicker" id="txtCommDate" readonly="readonly">
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                            <div class="col-md-4">
                                <label class="form-label">Service</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <select class="form-control m-bot15" id="ddlService" onchange="ChangeColor(this)">
                                        <option value="0">Select</option>
                                        <option value="BO">Booking Order</option>
                                        <option value="TL">Technician Labor </option>
                                        <option value="JC">JobCard</option>
                                        <option value="EW">Extended Warranty</option>
                                        <option value="UV">Used Vehicle Sales</option>
                                    </select>
                                </div>
                                <div class="makespace"></div>
                            </div>

                                <div class="col-md-4">
                                    <label class="form-label">Employee</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><a data-toggle="modal" data-target="#POModalSP" style="color:blue"><i class="fa fa-search"></i></a></span>
                                        <input type="text" class="form-control" id="txtEmpCode" onblur="ChangeColor(this)" style="width:30%" readonly/>
                                        <input type="text" class="form-control" id="txtEmpDesc" onblur="ChangeColor(this)"  style="width:70%" readonly/>
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Designation</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" id="txtEmpDesig" readonly>
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Product</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><a data-toggle="modal" data-target="#POModalProd" style="color:blue"><i class="fa fa-search"></i></a></span>
                                        
                                        <input type="text" class="form-control" id="txtProdCode" onblur="ChangeColor(this)" style="width:30%" readonly/>
                                        <input type="text" class="form-control" id="txtProdDesc" onblur="ChangeColor(this)" style="width:70%" readonly/>
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                            <div class="col-md-4">
                                <label class="form-label">Brand</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-car"></i></span>
                                    <input type="text" class="form-control" id="txtBrandCode" onblur="ChangeColor(this)" style="width:30%" readonly />
                                    <input type="text" class="form-control" id="txtBrandDesc" onblur="ChangeColor(this)" style="width:70%" readonly />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Color</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-car"></i></span>
                                    <input type="text" class="form-control" id="txtColorCode" onblur="ChangeColor(this)" style="width:30%" readonly />
                                    <input type="text" class="form-control" id="txtColorDesc" onblur="ChangeColor(this)" style="width:70%" readonly />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Version</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-car"></i></span>
                                    <input type="text" class="form-control" id="txtVersionCode" onblur="ChangeColor(this)" readonly />
                                </div>
                                <div class="makespace"></div>
                            </div>

                                <div class="col-md-4">
                                    <label class="form-label">Commision Percentage</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><a id="IssueClick" style="color:blue"><i class="fa fa-search"></i></a></span>
                                        <input type="text" class="form-control" id="txtCommPerc" onblur="ChangeColor(this)" />
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Commision Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><a id="IssueClick" style="color:blue"><i class="fa fa-search"></i></a></span>
                                        <input type="text" class="form-control" id="txtCommAmt" onblur="ChangeColor(this)" />
                                    </div>
                                    <div class="makespace"></div>
                                </div>

                                <div class="col-md-4">
                                    <div class="input-group pull-right">
                                        <button type="button" class="btn btn-default" id="btnCancel" onclick="ClearFields()" style="margin-top:25px;">Clear</button>
                                        <button type="button" class="btn btn-primary" id="btnSave" style="margin-top:25px;">Save</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="CommisionDetail" class="table table-striped dt-responsive display">
                                <thead>
                                    <tr>
                                        <th>Commision Code</th>
                                        <th>Commision Date</th>
                                        <th>Employee Code</th>
                                        <th>Product</th>
                                        <th>Commision %</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Commision != null)
                                    {
                                        foreach (var item in ViewBag.Commision)
                                        {
                                            <tr style="text-align: left" onclick="RevClick4('@item.CommisionCode','@item.CommisionDate','@item.EmpCode','@item.EmpDesc','@item.DesigDesc','@item.ProdCode','@item.ProdDesc','@item.BrandCode','@item.BrandDesc','@item.VersionCode','@item.CommPerc','@item.CommAmount','@item.ColorCode','@item.ColorDesc')">

                                                <td class="tdDiv">
                                                    <label >@item.CommisionCode</label>
                                                </td>
                                                <td class="tdDiv">
                                                    <label >@item.CommisionDate</label>
                                                </td>
                                                <td class="tdDiv">
                                                    <label >@item.EmpDesc</label>
                                                </td>
                                                <td class="tdDiv">
                                                    <label>@item.ProdDesc</label>
                                                </td>
                                                <td class="tdDiv">
                                                    <label >@item.CommPerc</label>
                                                </td>
                                                <td class="tdDiv">
                                                    <label >@item.CommAmount</label>
                                                </td>
                                                
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>



                </div>
            </section>
        </div>

    </form>
    <!-- Popup box modal start -->
    <div class="modal" id="section-message" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog animated bounceInDown">
            <div class="modal-content">
                <div class="modal-header" id="modalMessage">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Success</h4>
                </div>
                <div class="modal-body">

                    <h5 id="lblMessage"></h5>

                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button" >Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- modal end -->


</section>

