<script src='@Url.Content("~/assets/js/jquery-1.11.2.min.js")' type="text/javascript"></script>
<script>

    $(document).ready(function () {
        //Get_DelChkListData();

        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy"
        });

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = dd + '-' + mm + '-' + yyyy;

        $("#txtCommDate").val(today);

    })

    RevClick2 = function (code, name, designation) {

        document.getElementById('txtEmpCode').value = code;
        document.getElementById('txtEmpDesc').value = name;
        document.getElementById('txtEmpDesig').value = designation;
        $("#POModalSP").modal("hide");
        $('#txtEmpCode').css("border-color", "#e1e1e1");
    }

    RevClick3 = function (BrandCode,BrandDesc,ProdCode,VersionCode,ProdDesc,ColorCode,ColorDesc) {
        debugger
        document.getElementById('txtProdCode').value = ProdCode;
        document.getElementById('txtProdDesc').value = ProdDesc;
        document.getElementById('txtBrandCode').value = BrandCode;
        document.getElementById('txtBrandDesc').value = BrandDesc;
        document.getElementById('txtVersionCode').value = VersionCode;
        document.getElementById('txtColorCode').value = ColorCode;
        document.getElementById('txtColorDesc').value = ColorDesc;
        $('#txtProdCode').css("border-color", "#e1e1e1");
        $("#POModalProd").modal("hide");
    }

    RevClick4 = function (CommisionCode, CommisionDate, EmpCode, EmpName, designation, ProdCode, ProdDesc, BrandCode, BrandDesc, VersionCode, CommPerc, CommAmount, ColorCode, ColorDesc) {

        document.getElementById('txtCommCode').value = CommisionCode;
        document.getElementById('txtCommDate').value = CommisionDate;
        document.getElementById('txtEmpCode').value = EmpCode;
        document.getElementById('txtEmpDesc').value = EmpName;
        document.getElementById('txtEmpDesig').value = designation;
        document.getElementById('txtProdCode').value = ProdCode;
        document.getElementById('txtProdDesc').value = ProdDesc;
        document.getElementById('txtBrandCode').value = BrandCode;
        document.getElementById('txtBrandDesc').value = BrandDesc;
        document.getElementById('txtVersionCode').value = VersionCode;
        document.getElementById('txtCommPerc').value = CommPerc;
        document.getElementById('txtCommAmt').value = CommAmount;
        document.getElementById('txtColorCode').value = ColorCode;
        document.getElementById('txtColorDesc').value = ColorDesc;
    }

    function ChangeColor(value) {

        if ($(value).val() != '')
            $(value).css("border-color", "#e1e1e1");
    }

    $("#btnSave").click(function () {

        if (!PageValidation()) {
            return false;
        }

        $("#section-confirm").modal("show");
    })

    function PageValidation() {


        var count = 0;

        if ($("#txtEmpCode").val() == '' || $("#txtEmpCode").val() == null) {
            $("#txtEmpCode").css("border-color", "red");
            $("#txtEmpCode").focus();
            count++;
        }
        //if ($("#txtProdCode").val() == '' || $("#txtProdCode").val() == null) {
        //    $("#txtProdCode").css("border-color", "red");
        //    $("#txtProdCode").focus();
        //    count++;
        //}
        if ($("#txtCommPerc").val() == '' && $("#txtCommAmt").val() == '') {
            $("#txtCommPerc").css("border-color", "red");
            $("#txtCommAmt").css("border-color", "red");
            $("#txtCommPerc").focus();
            count++;
        }

        if (count > 0) {

            $("#lblMessage").html("Please fill the Required feilds");
            $("#section-message").modal("show");
            return false;
        }
        else {
            return true;
        }

    }

    function SaveEnquiry() {

        var dto = {};

        dto.DealerCode = "@Session["DealerCode"].ToString()";
        dto.CommisionCode = $("#txtCommCode").val();
        dto.CommisionDate = $("#txtCommDate").val();
        dto.EmpCode = $("#txtEmpCode").val();
        dto.ProdCode = $("#txtProdCode").val()
        dto.CommPerc = $("#txtCommPerc").val();
        dto.CommAmount = $("#txtCommAmt").val();
        dto.ColorCode = $("#txtColorCode").val();
        dto.BrandCode = $("#txtBrandCode").val();
        dto.VersionCode = $("#txtVersionCode").val();
        dto.Service = $("#ddlService").val();

        $.ajax({
            dataType: "json",
            async: true,
            type: 'POST',
            url: '@Url.Content("~/Master/Insert_Commision")',
            data: dto,
            success: function (data) {

                    if (data.Success == true) {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                        setTimeout(function () {
                            $('#section-message').modal('hide');
                            location.reload();
                        }, 4000);
                        ClearFields();
                    }
                    else {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                    
                
            },
            complete: function () {
                //Get_VehicleTypeDetailData();

            },

        });

    }

    function ClearFields() {
        $("#txtCommCode").val('');
        $("#txtEmpCode").val('');
        $("#txtProdCode").val('');
        $("#txtProdDesc").val('');
        $("#txtCommPerc").val('');
        $("#txtCommAmt").val('');
        $("#txtEmpDesig").val('');
        $("#txtEmpCode").val('');
        $("#txtEmpDesc").val('');
        $("#txtBrandCode").val('');
        $("#txtBrandDesc").val('');
        $("#txtColorCode").val('');
        $("#txtColorDesc").val('');
        $("#txtVersionCode").val('');
    }
</script>