
@{
    ViewBag.Title = "SupplierMain";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}

<style>
    .makespace {
        margin-bottom: 20px;
    }

    .icheckbox_minimal-blue {
        top: 10px;
    }
</style>


<section class="wrapper main-wrapper row" style=''>

    <div class="clearfix"></div>
    <!-- MAIN CONTENT AREA STARTS -->
    <form id="icon_validate" action="javascript:;" novalidate="novalidate">
        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Supplier</h2>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-md-4">
                                <label class="form-label">Vendor Name</label>
                                <div class="input-group">

                                    <span class="input-group-addon"><a id="IssueClick" onclick="ShowModal('SaleQuotqaionNo')" style="color:blue"><i class="fa fa-search"></i></a></span>
                                    <input type="text" class="form-control" id="txtVendorName" maxlength="25" onblur="ChangeColor(this)" />
                                    <input type="hidden" id="hdnVendorCode" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Contact Person</label>
                                <div class="input-group controls">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="txtContPerson"  maxlength="25" onblur="ChangeColor(this)" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Credit Limit</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" id="txtCrdLimit" maxlength="25"  onkeypress="return isNumberKey(event)" />
                                </div>
                                <div class="makespace"></div>
                            </div>
                        </div>
                    </div>

                    <hr style="border-top:1px solid blue;" />

                    <h2 class="title pull-left" style="font-size: 19px; font-weight: 400;text-transform: uppercase;display: inline-block;">Contact Information</h2>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-md-4">
                                <label class="form-label">Email</label>
                                <div class="input-group">

                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="txtEmail" maxlength="25" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Phone No</label>
                                <div class="input-group controls">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="tel"  class="form-control" id="txtPhoneNo" maxlength="11" onkeypress="return isNumberKey(event)"/>
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Cell No</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="tel"  class="form-control" id="txtCellNo" maxlength="11" onkeypress="return isNumberKey(event)" onblur="ChangeColor(this)" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Fax No</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                     <input type="text" class="form-control" id="txtFaxNo" maxlength="25"  />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">URL</label>
                                <div class="input-group controls">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="email" class="form-control" id="txtURL" maxlength="25" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-10">
                                <label class="form-label">Address</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" id="txtAddress" maxlength="50" />
                                </div>
                                <div class="makespace"></div>
                            </div>
                        </div>
                    </div>

                    <hr style="border-top:1px solid blue;" />

                    <h2 class="title pull-left" style="font-size: 19px; font-weight: 400;text-transform: uppercase;display: inline-block;">Other Information</h2>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-md-4">
                                <label class="form-label">GST No.</label>
                                <div class="input-group">

                                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                    <input type="text" class="form-control" id="txtGSTNo" maxlength="25" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">NTN No.</label>
                                <div class="input-group controls">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="txtNTNNo" maxlength="25" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Payment Terms</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="tel" class="form-control" id="txtPayTerms" maxlength="25"  onkeypress="return isNumberKey(event)" />
                                </div>
                                <div class="makespace"></div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Account Code</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" id="txtActCode" maxlength="25" />
                                </div>
                                <div class="makespace"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
        
        <div class="col-xs-12">
            <section class="box ">
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="pull-left">

                            </div>
                            <div class="pull-right">
                                <button type="reset" class="btn btn-default" id="btnCancel" style="margin-top:25px;">Clear</button>
                                <button type="button" class="btn btn-primary" id="btnSave" style="margin-top:25px;">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        
    </form>
    <!-- Supplier Modal Start -->
    <div class="modal" tabindex="-1" id="SupplierModal" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="margin-top:60px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="modal123Label">Supplier</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="exampleInputuname" class="col-md-2">Search :</label>
                        <div class="col-md-10">
                            <input type="text" id="IssueNoSearch" class="form-control" aria-controls="SupplierTable" placeholder="Search . . . ">
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="table-responsive" style="height:300px;">
                            <table id="SupplierTable" class="table table-striped table-hover responsive">
                                <thead>
                                    <tr>
                                        <th>Sr</th>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Contact Person</th>                                        
                                        <th>Cell No</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size:12px; text-transform: uppercase">
                                    @{ int i = 0; }
                                    @if (ViewBag.Suppliers != null)
                                    {
                                        foreach (var item in ViewBag.Suppliers)
                                        {
                                            <tr style="text-align:left" onclick="SelectedSupplier(this);">
                                                <td> @i</td> @{ i++; }
                                                <td class="tdDiv" nowrap="nowrap" style="width: 13%;">
                                                    <a href="#" style="color:black"><label id="lblVendorCode">@item.VendorCode</label></a>
                                                </td>
                                                <td class="tdDiv" nowrap="nowrap" style="width: 13%;">
                                                    <a href="#" style="color:black"><label id="lblVendorDesc">@item.VendorDesc</label></a>
                                                </td>
                                                <td class="tdDiv" nowrap="nowrap" style="width:27%;">
                                                    <a href="#" style="color:black"><label id="lblContPerson">@item.ContPerson</label></a>
                                                </td>
                                                <td class="tdDiv" nowrap="nowrap" style="width:30%;">
                                                    <a href="#" style="color:black"><label id="lblCellNo">@item.Phone2</label></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
               
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- Supplier Modal End -->

    <div class="modal" id="section-confirm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog animated bounceInDown">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Confirm</h4>
                </div>
                <div class="modal-body">

                    <h5>Are you sure want to save ?</h5>

                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                    <button class="btn btn-success" type="button" onclick="SaveForm()">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Popup box modal start -->
    <div class="modal" id="section-message" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog animated bounceInDown">
            <div class="modal-content">
                <div class="modal-header" id="modalMessage">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Message</h4>
                </div>
                <div class="modal-body">

                    <h5 id="lblMessage"></h5>

                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- modal end -->
    <!-- MAIN CONTENT AREA ENDS -->
</section>

<script src='@Url.Content("~/assets/js/jquery-1.11.2.min.js")' type="text/javascript"></script>


<script>

    function ShowModal() {
            $('#SupplierModal').modal("show");
    }

    function ChangeColor(value) {

        if ($(value).val() != '')
            $(value).css("border-color", "#e1e1e1");
    }

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    $("#btnSave").click(function () {

        if (!PageValidation()) {
            return false;
        }
        $("#section-confirm").modal("show");
    })

    function PageValidation() {

        debugger
        var count = 0;

        if ($("#txtVendorName").val().trim() == '' || $("#txtVendorName").val() == null) {
            $("#txtVendorName").css("border-color", "red");
            $("#txtVendorName").focus();
            count++;
        }
        if ($("#txtContPerson").val().trim() == '') {
            $("#txtContPerson").css("border-color", "red");
            $("#txtContPerson").focus();
            count++;
        }
        if ($("#txtCellNo").val().trim() == '' || $("#txtCellNo").val() == null) {
            $("#txtCellNo").css("border-color", "red");
            $("#txtCellNo").focus();
            count++;
        }

        if (count > 0) {

            $("#lblMessage").html("Please fill the Required feilds");
            $("#section-message").modal("show");
            return false;
        }
        else {
            return true;
        }

    }

    function SaveForm() {

        var dto = {};

        dto.DealerCode = "@Session["DealerCode"].ToString()",
        dto.VendorCode = $("#hdnVendorCode").val();
        dto.VendorDesc = $("#txtVendorName").val();
        dto.Add1 = $("#txtAddress").val();
        dto.Add2 = "";
        dto.Add3 = "";
        dto.ContPerson = $("#txtContPerson").val();
        dto.Phone1 = $("#txtPhoneNo").val();
        dto.Phone2 = $("#txtCellNo").val();
        dto.Fax = $("#txtFax").val();
        dto.Email = $("#txtEmail").val();
        dto.URL = $("#txtURL").val();
        dto.GSTno = $('#txtGSTNo').val();
        dto.NTN = $('#txtNTNNo').val();
        dto.PaymentTerm = $("#txtPayTerms").val();
        dto.AccountCode = $("#txtActCode").val();
        dto.CreditLimit = $("#txtCrdLimit").val();
        


        $.ajax({
            dataType: "json",
            async: true,
            type: 'POST',
            url: '@Url.Content("~/Supplier/Insert_SupplierDetail")',
            data: dto,
            success: function (data) {
                if (data) {
                    if (data.Success == true) {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $(".modal-title").text('Success')
                        $("#section-message").modal('show');
                    }
                    else {
                        $(".modal-title").text('Failed')
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }

                }
            },
            complete: function () {
                
            },
        });
    }

    SelectedSupplier = function (value) {

        var lblVendorCode = $(value).closest('tr').find("#lblVendorCode").text();
        getData(lblVendorCode);

        $("#SupplierModal").modal("hide");
    }

    function getData(id) {


        var leadId = id;
        if (leadId != "0") {
            $.ajax({
                dataType: "json",
                async: true,
                type: 'GET',
                url: '@Url.Content("~/Supplier/Select_Supplier")',
                data: { 'EnquiryId': leadId },
                success: function (data) {
                    if (data.Success == true) {
                        var item = JSON.parse(data.Response)

                        //Event Information

                        $("#txtVendorName").val(item[0].VendorDesc);
                        $("#txtAddress").val(item[0].Add1);
                        $("#txtContPerson").val(item[0].ContPerson);
                        $("#txtPhoneNo").val(item[0].Phone1);
                        $("#txtCellNo").val(item[0].Phone2);
                        $("#txtFax").val(item[0].Fax);
                        $("#txtEmail").val(item[0].Email);
                        $("#txtURL").val(item[0].URL);
                        $('#txtGSTNo').val(item[0].GSTno);
                        $('#txtNTNNo').val(item[0].NTN);
                        $("#txtPayTerms").val(item[0].PaymentTerm);
                        $("#txtActCode").val(item[0].AccountCode);
                        $("#txtCrdLimit").val(item[0].CreditLimit);

                    }
                },
                complete: function () {
                   
                },
            });

        }

    }

</script>