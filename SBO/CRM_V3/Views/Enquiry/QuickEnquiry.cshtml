    function SaveEnquiry()
    {

        var dto = {};
        var isFinance = "N";
        var CashFinanced = "N";
        var checkRadiobtn = $("input[name='payment']:checked").val();
        if (checkRadiobtn == "0")
        { isFinance = "N"; CashFinanced = "Y" }
        else if (checkRadiobtn == "1")
        { isFinance = "Y"; CashFinanced = "N" }
        else { isFinance = "N"; CashFinanced = "N"; }

        var title = $("#ddlSalutation").val();
        var name = $("#txtCustName").val();
        var mobile = $("#txtCustCellNo").val();
        var quantity = $("#txtQuantity").val();
        var assignTo = $("#ddlAssignTo").val();
        var color = $("#ddlColor").val();
        var brandCode = $("#ddlBrandCode").val().trim();
        var prodCode = $("#ddlProdCode").val().trim();
        var username = $("#ddlAssignTo :selected").text();
        var version = $("#txtVersion").val();

        debugger

        dto.DealerCode = "@Session["DealerCode"].ToString()";
        dto.EmpCode = $("#ddlAssignTo").val();
        dto.CashFinanced = CashFinanced;
        dto.IsFinanced = isFinance;
        dto.CreatedBy = username;
        dto.BrandCode = brandCode;
        dto.ProdCode = prodCode;
        dto.ColorCode = color;
        dto.Qty = quantity;
        dto.ProspectTitle = title;
        dto.Name = name;
        dto.Mobile = mobile;
        dto.VersionCode = version.trim();

        $.ajax({
            dataType: "json",
            async: true,
            type: 'POST',
            url: '@Url.Content("~/Enquiry/Insert_QuickEnquiry")',
            data: dto,
            success: function (data) {
                if (data) {
                    if (data.Success == true)
                    {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                    else {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                }
            },
            complete: function () {
                location.reload();
            },
            error: function(data) {
                $("#section-confirm").modal("hide")
                $("#modalMessage").css("background-color", "#e46457");
                $("#lblMessage").text(data.Message)
                $("#section-message").modal('show');
            }
        });
    }

