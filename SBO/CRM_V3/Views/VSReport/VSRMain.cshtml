<script src='@Url.Content("~/assets/plugins/daterangepicker/js/moment.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/assets/plugins/daterangepicker/js/daterangepicker.js")' type="text/javascript"></script>


@*<script src='@Url.Content("~/assets/plugins/perfect-scrollbar/perfect-scrollbar.min.js")' type="text/javascript"></script>*@

<script>

    $(document).ready(function () {

        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            yearRange: "-3:+1",
            changeYear: true,
            changeMonth: true,
        });

        $("#txtToDate").datepicker({
            dateFormat: "dd/mm/yy"
        });

        $("#txtFromDate").datepicker({
            dateFormat: "dd/mm/yy"
        });

        //$(".selector").datepicker("option", "dateFormat", "yy-mm-dd");

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = dd + '-' + mm + '-' + yyyy;

        $("#txtFromDate").val(today);
        $("#txtToDate").val(today);

    })

    $("#ddlReportType").change(function () {
        debugger
        var type = $("#ddlReportType").val();
        if (type == "VS") {
            
            $("#ddlStkType").append($('<option value='+"AsOn"+' >' + "As On" + '</option>'));

        } else {
            $("#ddlStkType option[value='AsOn']").remove();
        }
    });


    $("#btnPrint").click(function () {

        var baseurl = '@Url.Action("Export")';
        var url = baseurl + '?Type=' + $('#ddlStkType').val() + '&RptType=' + $('#ddlReportType').val() + '&FromDate=' + $("#txtFromDate").val() + '&ToDate=' + $("#txtToDate").val() + '&Segment=' + $('#ddlSegment').val() + '&Location=' + $('#ddlVehLoc').val()+'';

        window.open(url, '_blank');

    })

</script>




