
@{
    ViewBag.Title = "CostCenter";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}

<h2>CostCenter</h2>

<section class="wrapper main-wrapper row">
    <form method="post">
        <div class="col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Cost Center</h2>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                    </div>
                </header>
                <div class="content-body ">
                    <div class="row" style="margin-bottom:1rem; margin-left:1px">
                        <div class="form-group row">

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label class="form-label">CS Code</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <input type="text" class="form-control" id="txtSoDate" readonly>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label">Set as Default</label>
                                    <div class="input-group">
                                        <input type="checkbox" id="txtSoDate">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Expense Invoice Date</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" class="form-control datepicker" id="txtSoDate" placeholder="mm/dd/yyyy">
                                    </div>
                                </div>
                            </div>



                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label class="form-label">Name</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                                        <input type="text" class="form-control" id="FaxNoID" name="FaxNo" />
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <label class="form-label">Remarks</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                                        <input type="text" class="form-control" id="FaxNoID" name="FaxNo" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label class="form-label">Type</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                        <select class="form-control m-bot15" id="CusTitleID" name="CusTitle">
                                            <option value="Mr">Mr.</option>
                                            <option value="Ms">Ms.</option>
                                        </select>
                                        <span class="input-group-addon"><i class="fa fa-plus"></i></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Description</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                                        <input type="text" class="form-control" id="FaxNoID" name="FaxNo" />
                                    </div>
                                </div>

                            </div>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label class="form-label">Effective Form</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" class="form-control datepicker" id="txtSoDate" placeholder="mm/dd/yyyy">
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <label class="form-label">Is Active</label>
                                    <div class="input-group">
                                        <input type="checkbox" id="txtSoDate">
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-warning" id="btnCancel" style="margin-top:27px; width:100px">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <style>
            .border-for {
                border: 1px solid blue;
            }

            .label-heading {
                margin: 0.5rem;
            }

            .divider {
                width: 5px;
                height: auto;
                display: inline-block;
            }
        </style>

    </form>
</section>